{
  "name": "famshare",
  "description": "Share the load of family accounts on services",
  "version": "0.0.1",
  "author": "BeeeQueue",
  "dependencies": {
    "boom": "^7.3.0",
    "dotenv": "^6.2.0",
    "knex": "^0.16.3",
    "koa": "^2.6.2",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "pg": "^7.7.1",
    "superagent": "^4.0.0",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.2",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/boom": "^7.2.1",
    "@types/knex": "^0.15.1",
    "@types/koa": "^2.0.47",
    "@types/koa-bodyparser": "^4.2.1",
    "@types/koa-router": "^7.0.35",
    "@types/superagent": "^3.8.5",
    "@types/uuid": "^3.4.4",
    "husky": "^1.3.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "ts-node-dev": "^1.0.0-pre.32"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "license": "AGPL-3.0-only",
  "lint-staged": {
    "*.{ts,json}": [
      "prettier --write",
      "git add"
    ],
    ".*rc": [
      "prettier --write",
      "git add"
    ]
  },
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn -r dotenv/config src/index.ts",
    "start": "ts-node -r dotenv/config src/index.ts"
  }
}
